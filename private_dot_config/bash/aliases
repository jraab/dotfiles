# ~/.config/bash/aliases - Shared aliases for all platforms
# Managed by chezmoi

# ls family - OS-specific file defines base ls (color, dirs-first, long format)
alias ll='ls -lh'
alias la='ls -alH'
alias cc='claude code'

alias longleaf='ssh -X jraab@longleaf.its.unc.edu'

# Chezmoi shortcuts
alias dotcd='chezmoi cd'
dotpush() {
    local msg="${1:-update dotfiles}"
    chezmoi apply && \
    git -C "$(chezmoi source-path)" add -A && \
    git -C "$(chezmoi source-path)" commit -m "$msg" && \
    git -C "$(chezmoi source-path)" push
}
