# ~/.config/bash/macos - macOS-specific shell settings
# Managed by chezmoi

# Colors
alias grep='grep --color=auto'

# Use GNU ls (from coreutils) for --group-directories-first support
# Falls back to BSD ls with CLICOLOR if gls isn't available
if command -v gls &>/dev/null; then
    alias ls='gls --color=auto --group-directories-first -lh'
else
    export CLICOLOR=1
    export LSCOLORS=ExFxCxDxBxegedabagacad
    alias ls='ls -lh'
fi

# Homebrew (Apple Silicon vs Intel)
if [[ -f /opt/homebrew/bin/brew ]]; then
    eval "$(/opt/homebrew/bin/brew shellenv)"
elif [[ -f /usr/local/bin/brew ]]; then
    eval "$(/usr/local/bin/brew shellenv)"
fi

# Silence zsh default shell warning on macOS
export BASH_SILENCE_DEPRECATION_WARNING=1
